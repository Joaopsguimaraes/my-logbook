generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workout {
  id          String     @id @default(uuid())
  userId      String
  name        String
  hasProgress Boolean
  exercises   Exercise[]
  date        DateTime
}

model Exercise {
  id            String      @id @default(uuid())
  name          String
  userId        String
  exerciseImage String
  muscleGroup   MuscleGroup
  weight        Float
  reps          Int
  annotation    String
  hasProgress   Boolean
  Workout       Workout?    @relation(fields: [workoutId], references: [id])
  workoutId     String?
}

enum MuscleGroup {
  LEGS
  BACK
  SHOULDERS
  CHEST
  ARMS
}
